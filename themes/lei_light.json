{
	"name": "Lei Light",
	"include": "./light_plus.json",
	"settings": [
		{
			"name": "settings",
			"settings": {
				"background": "#EFE9DD",
        "caret": "#353431",
				"foreground": "#353431",
				"invisibles": "#dddddd",
				"lineHighlight": "#E0E0E0",
				"selection": "#cccccc",
				"rangeHighlight": "#3392FF3B",
				"selectionHighlight": "#3392FF3B",
				"inactiveSelection": "#3392FF3B",
				"wordHighlight": "#3392FF3B",
				"wordHighlightStrong": "#3392FF3B",
				"findMatchHighlight": "#3392FF3B",
				"currentFindMatchHighlight": "#3392FF3B",
				"findRangeHighlight": "#3392FF3B",
				"activeLinkForeground": "#a71d5d",
				"hoverHighlight": "#3392FF3B",
				"referenceHighlight": "#3392FF3B"
			}
		},
    {
			"scope": "comment",
			"settings": {
				"foreground": "#9E9B93"
			}
		},
    {
      "name": "Keyword",
			"scope": [
        "keyword",
        "keyword.control",
        "keyword.operator.new",
        "keyword.operator.expression",
        "variable.language",
        "constant.language",
        "meta.preprocessor",
        "storage",
        "storage.type",
        "storage.modifier",

        "string.comment.buffered.block.jade",
				"string.quoted.jade",
				"string.interpolated.jade",

				"string.unquoted.plain.in.yaml",
				"string.unquoted.plain.out.yaml",
				"string.unquoted.block.yaml",
				"string.quoted.single.yaml",

				"string.quoted.double.xml",
				"string.quoted.single.xml",
				"string.unquoted.cdata.xml",

				"string.quoted.double.html",
				"string.quoted.single.html",
				"string.unquoted.html",

				"string.quoted.single.handlebars",
				"string.quoted.double.handlebars",

        "punctuation.definition.template-expression.begin.ts",
				"punctuation.definition.template-expression.end.ts"
      ],
			"settings": {
				"foreground": "#0866D1",
        "fontStyle": "normal"
			}
		},
    {
			"scope": [
				"constant.numeric",
        "markup.inserted",
        "meta.preprocessor.numeric",
        "keyword.other.unit",
        "constant.sha.git-rebase",
        "constant.language"
			],
			"settings": {
				"foreground": "#BF0099"
			}
		},
    {
			"name": "Function declarations",
			"scope": [
				"entity.name.function",
				"support.function",

				"support.constant.handlebars",

        "support.class",
				"entity.name.class"
			],
			"settings": {
				"foreground": "#353431"
			}
		},
    {
			"name": "XML/HTML tags",
			"scope": [
        "punctuation.definition.tag",
        "entity.name.tag"
      ],
			"settings": {
				"foreground": "#0077aa"
			}
		},
    {
			"scope": [
        "entity.name.tag"
      ],
			"settings": {
        "fontStyle": "bold"
			}
		},
    {
			"scope": [
        "entity.other.attribute-name"
      ],
			"settings": {
				"foreground": "#BF0099"
			}
		},
    {
			"scope": [
				"support.type.vendored.property-name",
				"support.type.property-name",
				"variable.css",
				"variable.scss",
				"variable.other.less"
			],
			"settings": {
				"foreground": "#DD4A68"
			}
		},
    {
      "name": "Punctuation",
      "scope": [
        "meta.brace",
        "meta.delimiter",
        "punctuation.definition",
        "punctuation.terminator",
        "punctuation.separator"
      ],
      "settings": {
        "foreground": "#9E9B93"
      }
    },
    {
			"name": "Variable and parameter name",
			"scope": [
				"variable",
				"meta.definition.variable.name",
				"support.variable"
			],
			"settings": {
				"foreground": "#353431"
			}
		},
		{
			"name": "Object keys, TS grammar specific",
			"scope": [
				"meta.object-literal.key",
				"meta.object-literal.key entity.name.function"
			],
			"settings": {
				"foreground": "#353431"
			}
		}
	]
}
